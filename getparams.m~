function params = getparams()
%% Set params for experiment 
params.trials      = 4.0;  % number of trials (blocks) 
params.size        = 3e3; % size of the marker 
params.fixation    = 4.0; % fixation time 
params.preperation = 2.0; % time (secs) for movement prep 
params.movement    = 5.0; % time for each movement 
params.step        = 4.0; % number of steps (reaches)  

params.targetloc   = [-0.8 0.0; ...
                      +0.8 0.0; ... ];
params.states      = {'fixation','preperation','movement'}; % states have actionable consequences
params.screensize  = get(groot,'ScreenSize');
end